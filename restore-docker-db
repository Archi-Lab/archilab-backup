#!/usr/bin/env bash

host_name="$1"
stack_name="$2"
service_name="$3"
db_user="$4"
db_name="$5"
backup_date="$6"

ssh "${host_name}" "mkdir -p \${HOME}/bin"

scp "${HOME}/archilab-backup/restore-docker-db-dump" "${host_name}:\${HOME}/bin/"

ssh "archilab-nas" "mkdir -p \${HOME}/backup/${host_name}"

scp -3 "archilab-nas:\${HOME}/backup/${host_name}/${service_name}_${backup_date}.sql" "${host_name}:\${HOME}/backup/${host_name}"

ssh "${host_name}" "\${HOME}/bin/restore-docker-db-dump" "${host_name}" "${stack_name}" "${service_name}" "${db_user}" "${db_name}" "${backup_date}"

ssh "${host_name}" "rm \${HOME}/backup/${host_name}/*"
