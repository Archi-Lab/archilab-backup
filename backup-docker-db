#!/usr/bin/env bash

host_name="$1"
stack_name="$2"
service_name="$3"
db_user="$4"
db_name="$5"

scp "dump-docker-db" "${host_name}:~/bin"

ssh "${host_name}" "~/bin/dump-docker-db" "${stack_name}" "${service_name}" "${db_user}" "${db_name}"

scp -3 -r "${host_name}:~/backup/*" "archilab-nas:~/${host_name}/"

ssh "${host_name}" "rm ~/backup/*"
